# Node Environment Configuration
NODE_ENV=development
PORT=3000
DEBUG=echolist:*

# Database Configuration
DATABASE_URL=mysql://user:password@localhost:3306/echolist_dev
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis Cache Configuration
REDIS_URL=redis://localhost:6379
REDIS_MAX_RETRIES=3

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=dev_access_key
AWS_SECRET_ACCESS_KEY=dev_secret_key
S3_BUCKET_NAME=echolist-dev-media
CLOUDFRONT_DOMAIN=dev.cdn.echolist.com

# Security Configuration
JWT_SECRET=dev_jwt_secret

# Stripe Integration (v2023-10-16)
STRIPE_API_VERSION=2023-10-16
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Message Queue Configuration
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_HEARTBEAT=30

# Logging and Debug Configuration
LOG_LEVEL=debug
DEBUG_SQL=true
ENABLE_API_DOCS=true

# CORS Configuration (Development Only)
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Development Security Headers
SECURITY_HEADERS_ENABLED=true
CSP_REPORT_URI=http://localhost:3000/api/csp-report

# API Documentation
SWAGGER_ENABLED=true
SWAGGER_PATH=/api-docs

# Development Feature Flags
ENABLE_DEBUG_ENDPOINTS=true
ENABLE_PERFORMANCE_MONITORING=true

# Error Reporting
SENTRY_DSN=https://dev-sentry-key@sentry.io/dev-project
SENTRY_ENVIRONMENT=development

# Development Monitoring
ENABLE_REQUEST_LOGGING=true
ENABLE_QUERY_LOGGING=true
ENABLE_CACHE_LOGGING=true

# Development Service Timeouts (in milliseconds)
API_TIMEOUT=30000
DB_QUERY_TIMEOUT=10000
REDIS_OPERATION_TIMEOUT=5000

# Development Health Check
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_TIMEOUT=5000

# Development Metrics
ENABLE_METRICS=true
METRICS_PATH=/metrics

# Development Tracing
ENABLE_TRACING=true
TRACE_SAMPLE_RATE=1.0

# Development Cache Configuration
CACHE_TTL=300
CACHE_CHECK_PERIOD=60

# Development Queue Configuration
QUEUE_RETRY_ATTEMPTS=3
QUEUE_RETRY_DELAY=1000
QUEUE_DEAD_LETTER=true

# Development Storage Limits
MAX_UPLOAD_SIZE=10485760
MAX_REQUEST_SIZE=15485760

# Development Search Configuration
ENABLE_SEARCH_LOGGING=true
SEARCH_RESULT_LIMIT=100

# Development Notification Configuration
ENABLE_EMAIL_SENDING=false
EMAIL_FROM_ADDRESS=dev@echolist.com

# Development AI Service Configuration
AI_SERVICE_ENDPOINT=http://localhost:5000
AI_SERVICE_TIMEOUT=10000

# Development External API Keys (Sandbox/Test Environments)
EBAY_API_KEY=sandbox_key
AMAZON_API_KEY=test_key
WALMART_API_KEY=test_key
USPS_API_KEY=test_key

# Development Webhook Configuration
WEBHOOK_SECRET=dev_webhook_secret
WEBHOOK_TIMEOUT=5000